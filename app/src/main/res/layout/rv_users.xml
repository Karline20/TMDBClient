<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_color="@color/Red"
            app:civ_circle_background_color="@color/white"
            app:civ_border_width="2dp"
            app:civ_border_overlay="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_red" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/profile">

            <TableRow>
                <TextView
                    android:text="ID:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/id"
                    android:text="default id"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="User ID:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/userid"
                    android:text="default User id"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Name:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/name"
                    android:text="default User name"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Address:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/address"
                    android:text="default User address"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Age:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/age"
                    android:text="default User age"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Gender:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/gender"
                    android:text="default User gender"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Date Created:"
                    android:padding="8dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/date"
                    android:text="default User 09-10-23"
                    android:padding="8dp"
                    android:gravity="start"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>


</RelativeLayout>